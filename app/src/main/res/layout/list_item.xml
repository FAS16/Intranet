<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_layout"
    android:padding="6dp">

    <TextView
        android:id="@+id/courseTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:text="00:00 - 00:00"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Title of course"
        android:layout_toRightOf="@+id/courseTiming"></TextView>

    <TextView
        android:id="@+id/nameOfTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course id"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/courseTiming"
        android:layout_below="@+id/courseTitle"></TextView>

    <TextView
        android:id="@+id/roomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note about the class"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/courseTiming"
        android:layout_below="@+id/nameOfTeacher"></TextView>

    <ImageView
        android:id="@+id/courseNoteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_note_gray_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"></ImageView>
</RelativeLayout>